<odoo>
  <record id="view_create_prepack_wizard_form" model="ir.ui.view">
    <field name="name">create.prepack.wizard.form</field>
    <field name="model">create.prepack.wizard</field>
    <field name="arch" type="xml">
      <form string="Create Prepack Product">
        <group>
          <field name="bulk_product_tmpl_id"/>
          <field name="pack_qty"/>
          <field name="new_name" readonly="1"/>
          <field name="new_default_code"/>
        </group>

        <footer>
          <button name="action_confirm" type="object" string="Confirm" class="btn-primary"/>
          <button string="Discard" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_create_prepack_wizard" model="ir.actions.act_window">
    <field name="name">Create Prepack</field>
    <field name="res_model">create.prepack.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_create_prepack_wizard_form"/>
    <field name="target">new</field>
  </record>
</odoo>
