<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit product form view -->
    <record id="view_product_template_form_elmis" model="ir.ui.view">
        <field name="name">product.template.form.elmis</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Place eLMIS Code near Internal Reference / default_code -->
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="elmis_code"/>
            </xpath>
        </field>
    </record>

    <record id="view_product_template_form_add_prepack" model="ir.ui.view">
        <field name="name">product.template.form.add.prepack</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Add Create Prepack Product button -->
            <xpath expr="//button[@name='310']" position="after">
                <button name="%(action_create_prepack_wizard)d" type="action" string="Create Prepack Product" context="{'default_bulk_product_tmpl_id': active_id}"/>
            </xpath>
            <xpath expr="//field[@name='detailed_type']" position="after">
                <field name="is_prepack" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='is_prepack']" position="after">
                <field name="bulk_product_id" readonly="1"
                       attrs="{'invisible': [('is_prepack', '=', False)],
                               'required': [('is_prepack', '=', True)]}"/>
            </xpath>
        </field>
    </record>


    <!-- Inherit product tree view -->
    <record id="view_product_template_tree_elmis" model="ir.ui.view">
        <field name="name">product.template.tree.elmis</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="elmis_code"/>
            </xpath>
        </field>
    </record>


</odoo>
